<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nativos.forumriu.HomeFragment">

    <!-- TODO: Update blank fragment layout -->


<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/swipeDebates"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/imageViewdebateimg"
    android:layout_marginTop="10dp"
    >

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/listViewDebate"
        />

</android.support.v4.widget.SwipeRefreshLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/debates"
        android:id="@+id/imageViewdebateimg"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
